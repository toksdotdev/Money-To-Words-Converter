  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Tochukwu Nkemdilim",
      "email": "nkemdilimtochukwu@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.2 || ^8",
    "stichoza/google-translate-php": "~4.0"
  },
  "autoload": {
    "psr-4": {
      "TNkemdilim\\MoneyToWords\\": "src/"
    }
  },
  "autoload-dev": {
